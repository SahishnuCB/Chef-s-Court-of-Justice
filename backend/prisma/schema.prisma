generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  DEFENDANT
  PLAINTIFF
  JUROR
  JUDGE
}

enum CaseStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Verdict {
  GUILTY
  NOT_GUILTY
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  role      Role
  cases     CourtCase[] @relation("UserCases")
  juryVotes JuryVote[]
}

model CourtCase {
  id           Int        @id @default(autoincrement())
  title        String
  argument     String
  evidenceText String
  evidenceFile String?
  status       CaseStatus @default(PENDING)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  submittedById Int
  submittedBy   User       @relation("UserCases", fields: [submittedById], references: [id])

  juryVotes JuryVote[]
}

model JuryVote {
  id      Int     @id @default(autoincrement())
  verdict Verdict

  caseId Int
  jurorId Int

  case  CourtCase @relation(fields: [caseId], references: [id])
  juror User      @relation(fields: [jurorId], references: [id])

  @@unique([caseId, jurorId], name: "caseId_jurorId")
}
