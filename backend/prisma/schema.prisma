generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  DEFENDANT
  PLAINTIFF
  JUROR
  JUDGE
}

enum CaseStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Verdict {
  GUILTY
  NOT_GUILTY
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role

  casesSubmitted CourtCase[] @relation("CasesSubmitted")
  juryVotes      JuryVote[]
}

model CourtCase {
  id           Int        @id @default(autoincrement())
  title        String
  argument     String
  evidenceText String
  evidenceFile String?     // stored filename on disk
  status       CaseStatus @default(PENDING)

  submittedBy   User   @relation("CasesSubmitted", fields: [submittedById], references: [id])
  submittedById Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  juryVotes JuryVote[]
}

model JuryVote {
  id      Int     @id @default(autoincrement())
  verdict Verdict

  case   CourtCase @relation(fields: [caseId], references: [id])
  caseId Int

  juror   User @relation(fields: [jurorId], references: [id])
  jurorId Int

  createdAt DateTime @default(now())

  @@unique([caseId, jurorId])
}
